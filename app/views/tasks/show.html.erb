<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%# Ternary operator to check if task is complete or not %>
<p><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete task", task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure?" }%>
